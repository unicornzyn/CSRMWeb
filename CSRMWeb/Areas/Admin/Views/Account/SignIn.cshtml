<body>

    <div class="container">
        @using (Html.BeginForm("SignInPost", "Account", new { area = "Admin" }, FormMethod.Post, new { @class = "form-signin" }))
        {
            <h2 class="form-signin-heading">后台登录</h2>
            if(ViewBag.err == "2")
            {
                <p style="color:red;">用户名或密码错误！</p>
            }
            <label for="inputEmail" class="sr-only">用户名</label>
            <input type="text" id="inputEmail" name="inputEmail" class="form-control" placeholder="用户名" required autofocus>
            <label for="inputPassword" class="sr-only">密 码</label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="密 码" required>
            <button class="btn btn-lg btn-primary btn-block" type="submit">登 录</button>
        }


    </div> <!-- /container -->
