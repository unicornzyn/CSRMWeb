@model CSRMDAL.huiyijianjie
@{
    ViewBag.menu = 1;
    ViewBag.Title = "会议简介";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Ajax.BeginForm("hyjjPost", "Manager", new { area = "Admin" }, new AjaxOptions { OnSuccess = "onsuccess" }, new { @class = "form-horizontal" }))
{
    <h1 class="page-header">会议简介</h1>

    <div class="form-group">
        <label for="txtinfo" class="col-sm-2 control-label">会议简介</label>
        <div class="col-sm-10">
            <script id="container" name="content" type="text/plain">

            </script>
            <script type="text/javascript" src="~/Areas/Admin/Scripts/ueditor/ueditor.config.js"></script>
            <script type="text/javascript" src="~/Areas/Admin/Scripts/ueditor/ueditor.all.min.js"></script>
            <input type="hidden" id="txtinfo" name="txtinfo" placeholder="会议简介" data-val="true" data-val-required="必填" data-val-length-max="500" data-val-length="最多500个字符" />
            <span data-valmsg-for="txtinfo" data-valmsg-replace="true" class="error"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保 存</button>
        </div>
    </div>
}

@section scripts
{
    <script type="text/javascript">
        var ue = UE.getEditor('container');
        ue.addListener("contentchange", function () {
            $("#txtinfo").val($("textarea[name='content']").val());
        });
        $(function () {
            ue.ready(function () {
                ue.setContent('@Html.Raw(Model.info)');
                ue.fireEvent("contentchange");
            });

            //$("form").on("change", "textarea[name='content']", function () {
            //
            //});
            
        });
        function getinfo() { }

    </script>
}